# Ambiente
NODE_ENV=production
PORT=3100
PROXY_PORT=443

# URLs públicas (CORS e geração de links)
FRONTEND_URL=https://wavoip.app.conectaconquista.tech
BACKEND_URL=https://wavoip.api.conectaconquista.tech

# Banco (conexão interna via Docker)
DB_DIALECT=postgres
DB_PORT=5432
POSTGRES_HOST=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=postgres

# Segredos — TROCAR por valores fortes de produção
TOKEN=altere_este_token_super_forte
JWT_SECRET=altere_este_jwt_secret_super_forte
JWT_REFRESH_SECRET=altere_este_jwt_refresh_secret_super_forte

# (Opcional) Pool de conexões
POSTGRES_POOLMAX=50
POSTGRES_POOLMIN=10
POSTGRES_POOLACQUIRE=30000
POSTGRES_POOLIDLE=10000
